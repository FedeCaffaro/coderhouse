<div>
  <h1>Lista de productos</h1>
  {{#each products}}
    <div id="product-list-container">
      <div id="product-item">
        <p id="title">{{this.title}}</p>
        <p>{{this.description}}</p>
        <p>${{this.price}}</p>
        {{#if this.thumbnail.length}}
          {{!-- {{#each this.thumbnail}} --}}
          <div class="thumbnail-container">
            <img src={{this.thumbnail}} alt="" />
          </div>
          {{!-- {{/each}} --}}
        {{else}}
          <p id="no-image">no image</p>
        {{/if}}
      </div>
    </div>
  {{/each}}
</div>